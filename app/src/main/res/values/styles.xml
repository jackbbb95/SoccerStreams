<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/windowBackground</item>
        <item name="android:textColorPrimary">@color/textDarkPrimary</item>
    </style>


    <style name="HeaderTextStyle" parent="@android:style/TextAppearance">
        <item name="android:fontFamily">@string/font_family_medium</item>
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="BodyTextStyle" parent="@android:style/TextAppearance">
        <item name="android:fontFamily">@string/font_family_light</item>
    </style>

    <style name="TitleTextStyle" parent="@android:style/TextAppearance">
        <item name="android:fontFamily">@string/font_family_medium</item>
        <item name="android:textColor">@color/textDarkPrimary</item>
        <item name="android:textSize">18sp</item>
    </style>

</resources>
