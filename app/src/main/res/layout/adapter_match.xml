<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp"
    android:foreground="?android:attr/selectableItemBackground"
    android:animateLayoutChanges="true">

    <RelativeLayout
        android:id="@+id/match_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TIME"
            android:layout_centerInParent="true"
            android:layout_margin="8dp"
            android:maxEms="8"/>

        <ImageView
            android:id="@+id/team1_src"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_toLeftOf="@+id/time"
            android:layout_toStartOf="@+id/time"
            android:layout_centerVertical="true"/>

        <ImageView
            android:id="@+id/team2_src"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_toRightOf="@+id/time"
            android:layout_toEndOf="@+id/time"
            android:layout_centerVertical="true"/>

        <TextView
            android:id="@+id/team1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TEAM1"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_toLeftOf="@+id/team1_src"
            android:layout_toStartOf="@+id/team1_src"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:maxWidth="80dp" />

        <TextView
            android:id="@+id/team2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TEAM2"

            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_toRightOf="@+id/team2_src"
            android:layout_toEndOf="@+id/team2_src"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:maxWidth="80dp" />
    </RelativeLayout>

</RelativeLayout>